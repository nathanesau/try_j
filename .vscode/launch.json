{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: j-app (j-app.py)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "j-app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--port=80"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}/j-app"
        }
    ]
}